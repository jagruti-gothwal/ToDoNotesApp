<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/texViewCamera"
        android:layout_width="0dp"
        android:text="Camera"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal" />
    <TextView
        android:layout_width="0dp"
        android:id="@+id/textViewGallery"
        android:text="Gallery"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/texViewCamera"
        app:layout_constraintTop_toBottomOf="@+id/texViewCamera"
        app:layout_constraintEnd_toEndOf="@+id/texViewCamera"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

</androidx.constraintlayout.widget.ConstraintLayout>